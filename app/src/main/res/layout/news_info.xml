<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <ImageView
        android:id="@+id/image_view_show"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="显示新闻图片"
        android:scaleType="fitXY" />

    <!--要取消按钮的焦点，负责Item不能点击  android:focusable="false"-->
    <Button
        android:id="@+id/button_share"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/share"
        android:focusable="false" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_view_show"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/image_view_show"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_view_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_view_show"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/image_view_show"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp" />

</RelativeLayout>
